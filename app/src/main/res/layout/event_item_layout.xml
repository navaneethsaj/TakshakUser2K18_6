<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_list_item"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingVertical="8dp"
        android:id="@+id/itemlayout"
        android:orientation="vertical"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:layout_margin="4dp"
            android:background="@drawable/image_round_edge"
            android:scaleType="fitXY"
            android:elevation="4dp"
            android:src="@drawable/noimg" />
        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="EventName"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/textcolor"
            android:textSize="20sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/eventCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="4dp"
                android:text="Adventure"
                android:textColor="@color/textcolor"
                android:textSize="18sp" />
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/knowmore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="more"
                    android:textSize="16dp"
                    android:textColor="#C6C1C1" />

                <ImageView
                    android:id="@+id/expandicon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="2dp"
                    android:backgroundTint="#c6c1c1"
                    android:src="@drawable/ic_more_vert_white_24dp" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/moreinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/eventId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="G001"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/eventDept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="Computer Science"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/eventDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="This is the desciption of the event"
                android:textColor="#262323"
                android:textSize="16sp" />

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_button"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="4dp"
                android:text="Register" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
